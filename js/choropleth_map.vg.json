{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Forest Reserve Coverage by State (2021)",
    "fontSize": 22,
    "font": "Arial",
    "anchor": "middle"
  },
  "width": 800,
  "height": 600,
  "projection": {
    "type": "equalEarth",
    "center": [110, 3],
    "scale": 2000
  },
  "layer": [
    {
      "mark": {
        "type": "rect",
        "stroke": "#000000",   
        "strokeWidth": 3,       
        "fill": "#ffffff"        
      },
      "encoding": {
        "x": {"value": 0},
        "y": {"value": 0},
        "x2": {"value": 800},   
        "y2": {"value": 600}   
      }
    }
    ,{
      "data": {
        "url": "https://raw.githubusercontent.com/Xuannn28/FIT3179-w9-homework/main/js/ne_10m.json",
        "format": {"type": "topojson", "feature": "ne_10m_graticules_1"}
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#dddddd",
        "strokeWidth": 0.5,
        "fill": null
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Xuannn28/FIT3179-w9-homework/main/js/ne_10m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Xuannn28/FIT3179-w9-homework/main/data/forest_reserve_cleaned.csv"
            },
            "key": "state",
            "fields": ["area"]
          }
        },
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Xuannn28/FIT3179-w9-homework/main/data/malaysia_state_area.csv"
            },
            "key": "state",
            "fields": ["total_area_km2"]
          }
        },
        {
          "calculate": "datum.area / (datum.total_area_km2 * 100)",
          "as": "forest_pct"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "#aaaaaa", "strokeWidth": 0.7},
      "encoding": {
        "color": {
          "field": "forest_pct",
          "type": "quantitative",
          "title": "Forest Reserve Coverage (%)",
          "scale": {"scheme": "greens"}
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "State"},
          {"field": "area", "type": "quantitative", "title": "Forest Reserve (ha)"},
          {"field": "total_area_km2", "type": "quantitative", "title": "Total Area (kmÂ²)"},
          {
            "field": "forest_pct",
            "type": "quantitative",
            "title": "% of State Area",
            "format": ".1%"
          }
        ]
      }
    }
  ]
}
