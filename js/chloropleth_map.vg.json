{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Forest Reserve Area by State (2023)",
  "width": 800,
  "height": 600,
  "projection": {"type": "conicEqualArea",
    "center": [110, 4],        
    "parallels": [1, 7],     
    "rotate": [-110, 0, 0],   
    "scale": 3000 
}, 
  "data": {
    "url": "https://raw.githubusercontent.com/Xuannn28/FIT3179-w9-homework/main/js/ne_10m_admin_1_states_provinces.json",
    "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"} 
  },
  "transform": [
    {
      "lookup": "properties.name",  
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Xuannn28/FIT3179-w9-homework/main/data/forest_reserve_cleaned.csv"
        },
        "key": "state",
        "fields": ["area"]
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "area",
      "type": "quantitative",
      "scale": {"scheme": "greens"}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {"field": "area", "type": "quantitative", "title": "Forest Reserve Area (ha)"}
    ]
  }
}
